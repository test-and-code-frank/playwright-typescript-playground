{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": ".",
    "types": ["playwright"],
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "pages/**/*",
    "config/**/*", 
  "tests/**/*",
  "playwright.config.ts"
]
}